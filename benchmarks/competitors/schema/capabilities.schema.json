{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Competitor Capability Matrix",
  "type": "object",
  "required": [
    "schemaVersion",
    "updated",
    "featureCatalog",
    "targets"
  ],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "const": 1
    },
    "updated": {
      "type": "string"
    },
    "featureCatalog": {
      "type": "object",
      "required": [
        "bench",
        "profile"
      ],
      "properties": {
        "bench": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "id",
              "description"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        },
        "profile": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "id",
              "description"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "targets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "bench",
          "profile"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "bench": {
            "type": "object",
            "required": [
              "features"
            ],
            "properties": {
              "features": {
                "type": "object",
                "additionalProperties": {
                  "type": "boolean"
                }
              }
            },
            "additionalProperties": true
          },
          "profile": {
            "type": "object",
            "required": [
              "features"
            ],
            "properties": {
              "features": {
                "type": "object",
                "additionalProperties": {
                  "type": "boolean"
                }
              }
            },
            "additionalProperties": true
          },
          "evidence": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
