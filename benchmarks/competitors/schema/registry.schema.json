{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Competitor Benchmark Registry",
  "type": "object",
  "required": ["schemaVersion", "updated", "products"],
  "properties": {
    "schemaVersion": { "type": "integer", "const": 1 },
    "updated": { "type": "string" },
    "products": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "category", "website", "harness", "status"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9-]*$"
          },
          "name": { "type": "string", "minLength": 1 },
          "category": { "type": "string", "minLength": 1 },
          "website": { "type": "string", "minLength": 1 },
          "harness": { "type": "string", "minLength": 1 },
          "status": {
            "type": "string",
            "enum": ["active", "experimental", "deprecated"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
