{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Competitor Harness Definition",
  "type": "object",
  "required": ["schemaVersion", "id", "name", "execution", "normalization"],
  "properties": {
    "schemaVersion": { "type": "integer", "const": 1 },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    },
    "name": { "type": "string", "minLength": 1 },
    "execution": {
      "type": "object",
      "required": ["mode", "stdoutFormat"],
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["external-command", "manual-json"]
        },
        "stdoutFormat": {
          "type": "string",
          "enum": ["json"]
        },
        "defaultCommand": {
          "type": ["array", "null"],
          "items": { "type": "string", "minLength": 1 }
        },
        "examples": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "additionalProperties": false
    },
    "normalization": {
      "type": "object",
      "required": ["metricPaths", "requiredMetrics"],
      "properties": {
        "metricPaths": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          }
        },
        "metadataPaths": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          }
        },
        "requiredMetrics": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
