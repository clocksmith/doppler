{
  "$schema": "../schema/runtime-config.schema.json",
  "name": "ci",
  "description": "CI/CD configuration with file logging and headless mode",
  "extends": "default",
  "runtime": {
    "debug": {
      "logOutput": {
        "stdout": false,
        "file": "./logs/doppler.log",
        "append": false
      },
      "logLevel": {
        "defaultLogLevel": "verbose"
      },
      "trace": {
        "enabled": true,
        "categories": ["kernels", "perf"],
        "file": "./logs/trace.jsonl"
      }
    },
    "inference": {
      "sampling": {
        "temperature": 0,
        "maxTokens": 32
      }
    }
  },
  "cli": {
    "headed": false,
    "timeout": 180000
  }
}
