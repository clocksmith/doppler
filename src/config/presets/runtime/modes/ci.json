{
  "name": "ci",
  "description": "CI/CD configuration with file logging and headless mode",
  "extends": "default",
  "runtime": {
    "shared": {
      "tooling": {
        "intent": "verify"
      },
      "debug": {
        "logOutput": {
          "stdout": false,
          "file": "./logs/doppler.log",
          "append": false
        },
        "logLevel": {
          "defaultLogLevel": "verbose"
        },
        "trace": {
          "enabled": true,
          "categories": ["kernels", "perf"],
          "file": "./logs/trace.jsonl"
        }
      }
    },
    "inference": {
      "batching": {
        "maxTokens": 32
      },
      "sampling": {
        "temperature": 0
      }
    }
  },
  "cli": {
    "headless": true,
    "timeout": 180000
  }
}
