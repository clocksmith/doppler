{
  "name": "debug",
  "description": "Debug configuration with verbose logging and tracing enabled",
  "extends": "default",
  "runtime": {
    "shared": {
      "tooling": {
        "intent": "investigate"
      },
      "debug": {
        "logLevel": {
          "defaultLogLevel": "verbose"
        },
        "logHistory": {
          "maxLogHistoryEntries": 5000
        },
        "trace": {
          "enabled": true,
          "categories": [
            "all"
          ],
          "layers": null,
          "maxDecodeSteps": 100
        }
      }
    },
    "inference": {
      "debugTokens": true,
      "batching": {
        "maxTokens": 64
      }
    }
  }
}
