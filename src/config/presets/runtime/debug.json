{
  "name": "debug",
  "description": "Debug configuration with verbose logging and tracing enabled",
  "extends": "default",
  "runtime": {
    "shared": {
      "debug": {
        "logLevel": {
          "defaultLogLevel": "verbose"
        },
        "logHistory": {
          "maxLogHistoryEntries": 5000
        },
        "trace": {
          "enabled": true,
          "categories": ["all"],
          "layers": null,
          "maxDecodeSteps": 100
        }
      }
    }
  },
  "cli": {
    "headed": true,
    "timeout": 600000
  }
}
