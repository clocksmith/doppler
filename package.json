{
  "name": "@doppler/core",
  "version": "0.1.0",
  "description": "WebGPU-based local inference engine for quantized LLMs",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "type": "module",
  "bin": {
    "doppler": "./tools/doppler-cli.js"
  },
  "scripts": {
    "cli": "node tools/doppler-cli.js",
    "convert": "node tools/doppler-cli.js convert",
    "debug": "node tools/doppler-cli.js debug",
    "bench": "node tools/doppler-cli.js bench",
    "agents:verify": "node tools/verify-agent-parity.mjs",
    "test:model": "node tools/doppler-cli.js test-model",
    "bench:competitors:list": "node tools/competitor-bench.js list",
    "bench:competitors:validate": "node tools/competitor-bench.js validate"
  },
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js"
    },
    "./provider": {
      "types": "./src/client/doppler-provider.d.ts",
      "import": "./src/client/doppler-provider.js"
    },
    "./*": "./src/*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clocksmith/doppler.git"
  },
  "homepage": "https://github.com/clocksmith/doppler",
  "keywords": [
    "doppler",
    "webgpu",
    "inference",
    "llm",
    "quantized",
    "browser",
    "local"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "src",
    "src/gpu/kernels/*.wgsl",
    "README.md",
    "tools/doppler-cli.js",
    "tools/convert-safetensors-node.js"
  ],
  "devDependencies": {
    "jest": "^30.2.0",
    "playwright": "^1.58.2"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "onnxruntime-web": "^1.24.1"
  }
}
