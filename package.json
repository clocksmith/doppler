{
  "name": "@clocksmith/doppler",
  "version": "0.1.0",
  "description": "WebGPU-based local inference engine for quantized LLMs",
  "main": "dist/src/index.js",
  "types": "dist/types/src/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./provider": {
      "types": "./dist/types/client/doppler-provider.d.ts",
      "import": "./dist/client/doppler-provider.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clocksmith/doppler.git"
  },
  "homepage": "https://github.com/clocksmith/doppler",
  "scripts": {
    "start": "tsx serve.js",
    "test": "tsx cli/index.js test",
    "bench": "tsx cli/index.js bench",
    "debug": "tsx cli/index.js debug",
    "build": "tsc --project tsconfig.build.json",
    "build:benchmark": "node -e \"const esbuild = require('esbuild'); const files = require('fs').readdirSync('tests/benchmark').filter(f => f.endsWith('.ts')); files.forEach(f => esbuild.buildSync({ entryPoints: ['tests/benchmark/' + f], outfile: 'tests/benchmark/' + f.replace('.ts', '.js'), format: 'esm', platform: 'browser', target: 'es2022', bundle: false }));\"",
    "kernels:validate": "tsx tools/validate-kernel-registry.js",
    "kernels:lint": "tsx tools/lint-wgsl-overrides.js",
    "kernels:check": "npm run kernels:validate && npm run kernels:lint"
  },
  "keywords": [
    "doppler",
    "webgpu",
    "inference",
    "llm",
    "quantized",
    "browser",
    "local"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@webgpu/types": "^0.1.68",
    "esbuild": "^0.20.0",
    "happy-dom": "^20.0.8",
    "playwright": "^1.57.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "src/gpu/kernels/*.wgsl",
    "README.md"
  ]
}
